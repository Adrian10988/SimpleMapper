<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Label="Globals">
    <SccProjectName>SAK</SccProjectName>
    <SccProvider>SAK</SccProvider>
    <SccAuxPath>SAK</SccAuxPath>
    <SccLocalPath>SAK</SccLocalPath>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>2.2.0</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Adr.SimpleMapper</PackageId>
    <Authors>Adrian Campos</Authors>
    <Company />
    <Product>Adr.SimpleMapper</Product>
    <Description>Config-less mapping in C#. As simple as it gets.</Description>
    <PackageReleaseNotes>- Moved mapping attributes to result class as opposed to the old way of being on the source class
- Added support for nullable property types</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/Adrian10988/SimpleMapper</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Adrian10988/SimpleMapper</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>Mapper</PackageTags>
  </PropertyGroup>

</Project>
